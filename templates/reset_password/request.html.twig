{% extends 'password.html.twig' %}

{% block title %}Orbi|Restablecimiento de contraseña{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


<div class="container">
        <div class="row">
          <div class="col-lg-12">
            
            <div class="text-block pt-5">
            <h1 class=" mb-5 text-center">Recupere su contraseña</h1>
 {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
               Ingrese su dirección de correo electrónico y le enviaremos un enlace para restablecer su contraseña.
            </small>
        </div>

        <button class="btn btn-primary">Enviar correo electrónico</button>
    {{ form_end(requestForm) }}
             
            </div>
          </div>
          
        </div>
      </div>




    

    
{% endblock %}
