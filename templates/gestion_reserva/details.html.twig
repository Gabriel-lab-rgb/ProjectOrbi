{% extends 'base.html.twig' %}

{% block title %}Orbi|Admin!{% endblock %}

{% block body %}



<div class="container">               
 
      <div class="m-5 p-5">

       
        <!-- Breadcrumbs -->
        <ol class="breadcrumb ps-0  justify-content-start">
          <li class="breadcrumb-item"><a href="{{path('app_home')}}">Home</a></li>
        </ol>

   <div class="shadow bg-body p-5">
         {% for pedido in pedidos %}
      
        <div class="text-block">
          <p class="subtitle">{{pedido.getAlojamiento().getActividad().getNombre()}}</p>
          <h1 class="hero-heading mb-3">{{pedido.getAlojamiento().getNombre}}</h1>
        </div>
        <div class="text-block">
         
          <div class="row mb-3">
            <div class="col-md-6 d-flex align-items-center mb-3 mb-md-0">
              
              <p class="text-sm mb-0">Llegada<br>{{pedido.getLlegada()|date('d-m-Y')}}</p>
            </div>
            <div class="col-md-6 d-flex align-items-center">
              
              <p class="text-sm mb-0">Salida<br>{{pedido.getSalida()|date('d-m-Y')}}</p>
            </div>
          </div>
        </div>
        <div class="text-block">
          <div class="row">
            <div class="col-sm">
              <h6>Dirección</h6>
              <p class="text-muted">{{pedido.getAlojamiento().getUbicacion().getDireccion()}}, {{pedido.getAlojamiento().getUbicacion().getDireccion()}}</p>
            </div>
            <div class="col-sm">
              <h6>Telefono</h6>
              <p class="text-muted">{{pedido.getAlojamiento().getTelefono()}}</p>
            </div>
          </div>
        </div>
        <div class="text-block">
          <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
              <h6>Entire appartment</h6>
              <p class="text-muted mb-0">{{pedido.getPedido().getUsuario().getPersona().getNombre()}} {{pedido.getPedido().getUsuario().getPersona().getApellidos()}}</p>
            </div><img class="avatar avatar-lg p-1 flex-shrink-0 ms-4" src="{{asset('/img/usuarios/' ~ pedido.getPedido().getUsuario().getImages())}}" >
          </div>
        </div>

        <div class="text-block">
          <div class="row">
            <div class="col">
              <h6> Total cost</h6>
              <p class="text-muted">{{pedido.getPrecio()}} €</p>
            </div>
           
          </div>
        </div>
        <hr>
{%  endfor %}
</div>

