{% extends 'base.html.twig' %}

{% block title %}Hello GestionReservaController!{% endblock %}

{% block body %}



 <section class="py-5">
    <div class="container">
      <!-- Breadcrumbs -->
      <ol class="breadcrumb ps-0  justify-content-start">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item active">Host view </li>
      </ol>
      <div class="d-flex justify-content-between align-items-end mb-5">
        <h1 class="hero-heading mb-0">Reservas</h1>
      </div>
      <div class="d-flex justify-content-between align-items-center flex-column flex-lg-row mb-5">
        <div class="me-3">
          <p class="mb-3 mb-lg-0">You have <strong>12 bookings</strong> in your property</p>
        </div>
       
      </div>
      <div class="list-group shadow mb-5"><a class="list-group-item list-group-item-action p-4">
          
         
       {% for reserva in reservas %}



          <div class="row">
            <div class="col-lg-4 align-self-center mb-4 mb-lg-0">
              <div class="d-flex align-items-center mb-3">
                <h2 class="h5 mb-0">{{reserva.getUsuario().getUsername()}}</h2><img class="avatar avatar-sm avatar-border-white ms-3"
                  src="{{reserva.getUsuario().getImages()}}">
              </div>
              
            </div>
            <div class="col-lg-8">
              <div class="row">
                <div class="col-6 col-md-4 col-lg-3 py-3 mb-3 mb-lg-0">
                  <h6 class="label-heading">Estado</h6>
                  <p class="text-sm fw-bold">{{reserva.getStatus()}}</p>
                </div>
                <div class="col-6 col-md-4 col-lg-3 py-3">
                  <h6 class="label-heading">Total</h6>
                  <p class="text-sm fw-bold mb-0">{{reserva.getTotal()}}</p>
                </div>
                <div class="col-6 col-md-4 col-lg-3 py-3">
                  <h6 class="label-heading">Creado en </h6>
                  <p class="text-sm fw-bold">{{reserva.CreateAt()| date('Y-m-d')}}</p>
                  <h6 class="label-heading">Actualizado el</h6>
                  <p class="text-sm fw-bold mb-0">{{reserva.UpdateAt()|date('Y-m-d')}}</p>
                </div>
                <div class="col-12 col-lg-3 align-self-center">
                 {% if reserva.getStatus =='aceptado' %}
    
    <p>Reserva ya aceptada</p>
    {%  elseif reserva.getStatus =='cancelado' %}
     <p>Reserva cancelada</p>
      {% else %}
                <span href="{{path('deleteItem',{'id':reserva.getId()})}}" class="text-primary text-sm text-uppercase me-4 me-lg-0">No aceptar</span>
                <br class="d-none d-lg-block">
                <span  href="{{path('aceptar',{'id':reserva.getId()})}}" class="text-primary text-sm text-uppercase">Aceptar</span>
                  {% endif  %}  
                </div>
              </div>
            </div>
          </div>
          <hr>
            {% endfor %}
        </a>
     
      </div>
 

    </div>
  </section>


{% endblock %}
