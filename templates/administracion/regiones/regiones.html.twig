{% extends 'baseIndex.html.twig' %}

{% block title %}Hello AdministracionController!{% endblock %}

{% block body %}

<a href="{{path('regionCreate')}}"><button type="button" class="btn btn-danger" style="float:right; width: 120px; border-radius: 20px">+ Crear</button></a>

     <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">latitud</th>
      <th scope="col">longitud</th>
      <th scope="col">Descripcion</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
   {% for region in regiones %}
    <tr>
      <th scope="row">{{region.getId()}}</th>
      <td>{{region.getNombre()}}</td>
      <td>{{region.getLatitud()}}</td>
      <td>{{region.getLongitud()}}</td>
     <td>{{region.getDescripcion()}}</td>
      <td>
         <a href="{{ path('regionDetails', {'id':region.getId()})}}" class="view" title="" data-toggle="tooltip" data-original-title="View"><i class="material-icons">detalles</i></a>
         <a href="{{ path('regionEdit', {'id':region.getId()})}}" class="edit" title="" data-toggle="tooltip" data-original-title="Edit"><i class="material-icons">editar</i></a>
         <a href="{{ path('regionDelete', {'id':region.getId()})}}" class="delete" title="" data-toggle="tooltip" data-original-title="Delete"><i class="material-icons">borrar</i></a>
      </td>
    </tr>
     {% endfor %}
  </tbody>
</table>



{% endblock %}