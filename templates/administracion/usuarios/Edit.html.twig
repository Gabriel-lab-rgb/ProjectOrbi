{% extends 'baseIndex.html.twig' %}

{% block title %}Hello AdministracionController!{% endblock %}

{% block body %}

<h1 class="mt-4">Editar</h1>


{{ form_start(form,{'attr': {'enctype': 'multipart/form-data'}}) }}
   <div class="p-5 pt-2  d-flex flex-column gap-3 justify-content-center col-8 w-100">

<div class="card ">
  <div class="card-header ">
    <h3 class="card-title fw-light">Datos Personales</h3>
  </div>
  <div class="card-body">
  
  <div class="form-group"> <!-- Full Name -->
       {{ form_label(form.nombre) }}
       {{ form_widget(form.nombre,{'attr': {'value': persona.getNombre()}}) }}
    </div> 

 <div class="form-group"> <!-- Actividad -->
         {{ form_label(form.apellidos) }}
         {{ form_widget(form.apellidos,{'attr': {'value': persona.getApellidos()}}) }}
     </div>

  <div class="form-group"> <!-- caracteristicas -->
         {{ form_label(form.CodigoPostal) }}
         {{ form_widget(form.CodigoPostal,{'attr': {'value': persona.getCodigoPostal()}}) }}
     </div> 

         <div class="form-group"> <!-- descripcion -->
        {{ form_label(form.telefono) }}
        {{ form_widget(form.telefono,{'attr': {'value': persona.getTelefono()}}) }}
     </div> 

  <div class="form-group"> <!-- descripcion -->
        {{ form_label(form.FechaNacimiento) }}
        {{ form_widget(form.FechaNacimiento) }}
     </div> 

     
</div>


</div>

<div class="form-group"> <!-- Submit Button -->
        <a href="{{path('usuarios')}}"><button type="button" class="btn btn-danger">Cancelar</button></a>
        <button type="submit" class="btn btn-primary" name="editar">Editar</button>
    </div> 
{{form_end(form)}}


{% endblock %}