{% extends 'loginBase.html.twig' %}

{% block title %}Orbi|Registro{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

 



<div class="container-fluid px-3">

 <div class="row min-vh-100 ">

<div class="col-lg-5 d-flex flex-column justify-content-center aligns-items-center">

 <div class="bg-cover h-100 " style="background-image: url(http://3.bp.blogspot.com/-OqPBx9Nmj_Y/Vad9Q13nRtI/AAAAAAAAE1g/XH5q-BGXS3Y/s1600/mm8185-130321_01724_1800x1201.jpg);"></div>
</div>


   <div class="col-lg-7 d-flex  flex-column justify-content-center p-3">
   <h1 class="h2 mt-5 text-center" style="float:bottom">Registro</h1>
  
 {{ form_start(registrationForm,{'attr': {'class': 'row p-5 '}}) }}
 

  <div class="col-md-6">
    <label for="validationCustom03" class="form-label">Email</label>
    {{ form_widget(registrationForm.user.email) }}
   
  </div>
  <div class="col-md-6">
    <label for="validationCustomUsername" class="form-label">Username</label>
    <div class="input-group has-validation">

      {{ form_widget(registrationForm.user.username) }}
    
    </div>
  </div>

  <div class="col-md-4">
    <label for="validationCustomUsername" class="form-label">Contraseña</label>
    <div class="input-group has-validation">

      {{ form_widget(registrationForm.user.plainPassword, {
            label: 'Password'
        }) }}
     
    </div>
  </div>

<h3 class="mt-3">Datos Personales</h3>
  <div class="col-md-6">
    <label for="validationCustom01" class="form-label">Nombre</label>
   {{ form_widget(registrationForm.persona.nombre) }}
  
  </div>


  <div class="col-md-6">
    <label for="validationCustom02" class="form-label">Apellidos</label>
   {{ form_widget(registrationForm.persona.apellidos) }}
  </div>


   <div class="col-md-4">
    <label for="validationCustomUsername" class="form-label">Dni</label>
    <div class="input-group has-validation">

       {{ form_widget(registrationForm.persona.dni) }}
     
    </div>
  </div>

   <div class="col-md-4">
    <label for="validationCustomUsername" class="form-label">Fecha de Nacimiento</label>
    <div class="input-group has-validation">

       {{ form_widget(registrationForm.persona.FechaNacimiento) }}
      
    </div>
  </div>


   <div class="col-md-4">
    <label for="validationCustomUsername" class="form-label">Telefono</label>
    <div class="input-group has-validation">

       {{ form_widget(registrationForm.persona.telefono) }}
      
    </div>
  </div>

  <div class="pt-3">
  {{ form_row(registrationForm.agreeTerms) }}
  </div>
  
  <div class="d-grid">
    <button class="btn btn-lg btn-primary" type="submit">Registrarse</button>
  </div>
     <p><strong class="text-bold">¡Nota!</strong> Recibiras un correo Electronico para confirmar la cuenta. </p>
{{ form_end(registrationForm) }}
<hr class="my-3 " data-content="OR">
 <p class="text-center"><small class="text-muted text-center">¿Ya tienes una cuenta? <a href="{{path('login')}}">Iniciar Sesion</a></small></p>
</div>

 </div>
 </div>
 </div>
{% endblock %}
